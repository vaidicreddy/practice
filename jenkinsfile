pipeline {
  agent any 
    stages {
      stage ('checkout'){
         step {
              checkout scm }
              }         
      stage ('build') {
         step {
             sh 'mvn install' }
             }
      stage ('definescript'){
         step {
            sh 'sshpass -p "1234" scp target/ford.war mahesh1@172.17.0.2:/home/mahesh1/soft/apache-tomcat-8.5.32/webapps'}
              }
       stage ('serverstart'){
         step {
            sh 'sshpass "1234" ssh mahesh1@172.17.0.2 "JAVA_HOME=/home/mahesh1/soft/jdk1.8.0_181" "/home/mahesh1/soft/apache-tomcat-8.5.32/bin/startup.sh"}
          }
        }
    }
